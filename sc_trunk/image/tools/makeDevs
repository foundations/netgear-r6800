mknod $ROOTFS/usr/dev/mtdblock0 b 31 0
mknod $ROOTFS/usr/dev/mtdblock1 b 31 1
mknod $ROOTFS/usr/dev/mtdblock2 b 31 2
mknod $ROOTFS/usr/dev/mtdblock3 b 31 3
mknod $ROOTFS/usr/dev/mtdblock4 b 31 4
mknod $ROOTFS/usr/dev/mtdblock5 b 31 5
mknod $ROOTFS/usr/dev/mtdblock6 b 31 6
mknod $ROOTFS/usr/dev/mtdblock7 b 31 7
mknod $ROOTFS/usr/dev/mtdblock8 b 31 8
mknod $ROOTFS/usr/dev/mtdblock9 b 31 9
mknod $ROOTFS/usr/dev/mtdblock10 b 31 10
mknod $ROOTFS/usr/dev/mtdblock11 b 31 11
mknod $ROOTFS/usr/dev/mtdblock12 b 31 12
mknod $ROOTFS/usr/dev/mtdblock13 b 31 13
mknod $ROOTFS/usr/dev/mtdblock14 b 31 14

# USB Mass Storage Devices
mknod $ROOTFS/usr/dev/sda  b 8 0
