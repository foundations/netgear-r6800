mknod $ROOTFS/usr/dev/sdg4 b 8 100
mknod $ROOTFS/usr/dev/sdh  b 8 112
mknod $ROOTFS/usr/dev/sdh1 b 8 113
mknod $ROOTFS/usr/dev/sdh2 b 8 114
mknod $ROOTFS/usr/dev/sdh3 b 8 115
mknod $ROOTFS/usr/dev/sdh4 b 8 116
mknod $ROOTFS/usr/dev/ttyUSB0 c 188 0
mknod $ROOTFS/usr/dev/ttyUSB1 c 188 1
mknod $ROOTFS/usr/dev/ttyUSB2 c 188 2
mknod $ROOTFS/usr/dev/ttyUSB3 c 188 3
mknod $ROOTFS/usr/dev/ttyUSB4 c 188 4
